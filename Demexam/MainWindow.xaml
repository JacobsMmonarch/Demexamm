<Window x:Class="Demexam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demexam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#ff76e383">
            <Button HorizontalAlignment="Right" Content="Выход"/>
            <Image Width="45" Height="45" HorizontalAlignment="Left" Margin="5"/>
        </Grid>
        <Grid Grid.Row="0" Background="#FF99FFFF" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnSignIn_SignUp" HorizontalAlignment="Right" Content="Войти"/>
                <Button x:Name="btnExit" HorizontalAlignment="Right" Content="Назад"/>
            </StackPanel>
            <Image x:Name="imgLogo" Width="45" Height="45" HorizontalAlignment="Left" Margin="5" Source="/Resources/logo.png"/>
        </Grid>
        <Frame x:Name="FrmMain" Grid.Row="1" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
